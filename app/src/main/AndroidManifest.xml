<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anik.example.tourmate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.ImageFullScreenActivity"
            android:theme="@style/CustomAppTheme"></activity>
        <activity
            android:name=".Activity.MomentsActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Activity.ExpenseListActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Activity.RoutePointsActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Activity.PhoneAuthUserRegistrationActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Activity.PhoneVerificationActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Activity.NearbyPlacesActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Activity.TourHistoryActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Activity.TourDetailsActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Activity.ProfileActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Activity.AddTourActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Activity.SignUpActivity"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/CustomAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomAppTheme" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_api"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>